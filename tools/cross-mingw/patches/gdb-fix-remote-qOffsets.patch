+static int
+sect_offset(CORE_ADDR *_addr, char **_ptr, const char *name)
+{
+  char *ptr = *_ptr;
+  CORE_ADDR addr = 0;
+  int i;
+
+  if (strncmp(ptr, name, strlen(name)))
+    return 0;
+
+  ptr += strlen(name);
+
+  i = 0;
+  while (ptr[0] && ptr[0] != ';' && ptr[1] && ptr[1] != ';')
+    {
+      addr |= ((CORE_ADDR)fromhex (ptr[0]) << (i + 4)) |
+        ((CORE_ADDR)fromhex (ptr[1]) << i);
+      i += 8;
+      ptr += 2;
+    }
+
+  if (ptr[0] == ';')
+    ptr++;
+  else if (ptr[0])
+    ptr += 2;
+
+  *_ptr = ptr;
+  *_addr = addr;
+  return 1;
